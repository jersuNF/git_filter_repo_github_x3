menu "FW UPGRADE"
	config SCHEDULE_REBOOT_SECONDS
	int "How many seconds to wait before we reboot the device, must be high enough to ensure modules shut down correctly"
	default 5

	config DFU_MCUBOOT_FLASH_BUF_SZ
        int "Size of buffer used for flash write operations during MCUboot updates"
        default 512
        depends on DFU_TARGET_MCUBOOT

endmenu